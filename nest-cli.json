{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "foo": {
      "type": "library",
      "root": "libs/foo",
      "entryFile": "index",
      "sourceRoot": "libs/foo/src",
      "compilerOptions": {
        "tsConfigPath": "libs/foo/tsconfig.lib.json"
      }
    },
    "bar": {
      "type": "library",
      "root": "libs/bar",
      "entryFile": "index",
      "sourceRoot": "libs/bar/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bar/tsconfig.lib.json"
      }
    }
  }
}